{
    "compilerOptions": {
      "target": "es2017",
      "inlineSources": true,
      "inlineSourceMap": true,
      "strict": true,
      "module": "esnext",
      "outDir": "build",
      "declaration": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "moduleResolution": "Node",
      "resolveJsonModule": true,
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
  